<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.paint.RadialGradient?>
<?import javafx.scene.paint.Stop?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="mainContent" prefHeight="600.0" prefWidth="800.0" style="-fx-background-color: linear-gradient(to bottom, #c9a0ff, #8eb7ff);" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.supermarket.controller.ItemController">

    <VBox alignment="TOP_CENTER" layoutX="40.0" layoutY="12.0" prefHeight="600.0" prefWidth="774.0" spacing="25" style="-fx-background-color: rgba(255,255,255,0.55);                  -fx-background-radius: 25;                  -fx-padding: 40;">
        <Label text="Stock Management">
            <font>
                <Font name="Times New Roman Bold" size="32.0" />
            </font>
            <textFill>
                <RadialGradient centerX="0.5" centerY="0.5" radius="0.5">
                    <stops>
                        <Stop>
                            <color>
                                <Color red="0.10588235408067703" green="0.003921568859368563" blue="0.003921568859368563" />
                            </color>
                        </Stop>
                        <Stop offset="1.0">
                            <color>
                                <Color red="0.7803921699523926" green="0.13725490868091583" blue="0.13725490868091583" />
                            </color>
                        </Stop>
                    </stops>
                </RadialGradient>
            </textFill>

        </Label>
        <Pane prefHeight="319.0" prefWidth="640.0">
            <children>
                <VBox layoutX="7.0" prefHeight="58.0" prefWidth="337.0">
                    <children>
                        <Label text="ID">
                            <font>
                                <Font name="Berlin Sans FB Demi Bold" size="17.0" />
                            </font>
                        </Label>
                        <TextField fx:id="idTextField" onKeyPressed="#handleSearchItem" prefHeight="26.0" prefWidth="320.0" promptText="ID">
                            <font>
                                <Font size="12.0" />
                            </font>
                            <VBox.margin>
                                <Insets right="50.0" />
                            </VBox.margin>
                        </TextField>
                    </children>
                </VBox>
                <VBox />
                <TextField fx:id="nameTextField" layoutX="7.0" layoutY="101.0" prefHeight="27.0" prefWidth="287.0" promptText="Name">
                    <font>
                        <Font size="12.0" />
                    </font>
                </TextField>
                <Label layoutX="7.0" layoutY="76.0" prefHeight="25.0" prefWidth="46.0" text="Name">
                    <font>
                        <Font name="Berlin Sans FB Demi Bold" size="17.0" />
                    </font>
                </Label>
                <TextField fx:id="qtyTextField" layoutX="344.0" layoutY="29.0" prefHeight="26.0" prefWidth="263.0" promptText="QTY">
                    <font>
                        <Font size="12.0" />
                    </font>
                </TextField>
                <Label layoutX="344.0" layoutY="4.0" text="QTY">
                    <font>
                        <Font name="Berlin Sans FB Demi Bold" size="17.0" />
                    </font>
                </Label>
                <TextField fx:id="priceTextField" layoutX="351.0" layoutY="102.0" prefHeight="25.0" prefWidth="263.0" />
                <Label layoutX="351.0" layoutY="80.0" prefHeight="17.0" prefWidth="58.0" text="Price">
                    <font>
                        <Font name="Berlin Sans FB Demi Bold" size="17.0" />
                    </font>
                </Label>
            </children>
        </Pane>

        <HBox alignment="CENTER" prefHeight="69.0" prefWidth="640.0" spacing="20" style="-fx-padding: 20 0 0 0;">
            <Button fx:id="saveButton" onAction="#save" prefHeight="40" prefWidth="108.0" style="-fx-background-color: #C8F09E; -fx-background-radius: 25; -fx-text-fill: green; -fx-font-size: 15px; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 10,0.3,0,3);" text="Save" />
            <Button fx:id="updateButton" onAction="#update" prefHeight="40" prefWidth="108.0" style="-fx-background-color: #BAC3F5; -fx-background-radius: 25; -fx-text-fill: blue; -fx-font-size: 15px; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 10,0.3,0,3);" text="Update" />
            <Button fx:id="deleteButton" onAction="#delete" prefHeight="40" prefWidth="108.0" style="-fx-background-color: #F0C0C0; -fx-background-radius: 25; -fx-text-fill: red; -fx-font-size: 15px; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 10,0.3,0,3);" text="Delete" />
            <Button fx:id="resetButton" onAction="#reset" prefHeight="40" prefWidth="108.0" style="-fx-background-color: #E8E6E6; -fx-background-radius: 25; -fx-text-fill: Black; -fx-font-size: 15px; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.25), 10,0.3,0,3);" text="Reset" />
        </HBox>
        <TableView fx:id="tableItem" prefHeight="372.0" prefWidth="654.0" style="-fx-background-radius: 30;">
            <columns>
                <TableColumn fx:id="idColumn" prefWidth="136.0" style="-fx-background-radius: 15;" text="ID" />
                <TableColumn fx:id="nameColumn" minWidth="0.0" prefWidth="280.79998779296875" style="-fx-background-radius: 15;" text="Name" />
                <TableColumn fx:id="qtyColumn" prefWidth="144.0" style="-fx-background-radius: 15;" text="QTY" />
                <TableColumn fx:id="priceColumn" prefWidth="132.79996337890623" style="-fx-background-radius: 15;" text="Price" />
            </columns>
        </TableView>

    </VBox>

</AnchorPane>
